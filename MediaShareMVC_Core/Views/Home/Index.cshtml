<br>
<div class="card border-dark mb-3" style="max-width: 20rem;">
    <div class="card-header">Welcome ʕっ•ᴥ•ʔっ </div>
    <div class="card-body">
        <h4 class="card-title">This is the Public Board.</h4>
        <p class="card-text">You can browse all the public post and search for specific ones by its name or who posted it.</p>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="card" style="width: 38rem;">
        <h3 class="card-header">@Html.DisplayFor(modelItem => item.MediaTitle)</h3>
        <img class="card-img-top" src="@Url.Content("https://awscoremvc.s3.us-east-2.amazonaws.com/Images/" + item.MediaName)" alt="Card image cap">
        <div class="card-body">
            <p class="card-text">Posted by @Html.DisplayFor(modelItem => item.Email)</p>
        </div>
